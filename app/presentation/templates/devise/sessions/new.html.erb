<h3>Log in</h3>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= view.form_group(self, f, :email) do %>
    <%= f.label :email %>
    <%= f.email_field :email, class:"form-input mt-2", placeholder:"Email", autofocus: true, autocomplete: "email" %>
    <%= view.errors_hint_tag(f, :email) %>
  <% end %>
  <%= view.form_group(self, f, :password) do %>
    <%= f.label :password %>
    <%= f.password_field :password, class:"form-input mt-2", placeholder:"Password", autofocus: true, autocomplete: "current-password" %>
    <%= view.errors_hint_tag(f, :password) %>
  <% end %>
  <% if devise_mapping.rememberable? %>
    <div class="field my-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <div>
    <%= f.submit "Log in", class: "btn btn-primary my-2" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
