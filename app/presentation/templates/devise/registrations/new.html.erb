<div class="header my-2">
  <h2>Create Account</h2>
  <h6 class="mb-3">Already have an account? <%= link_to "Log in", new_session_path(resource_name) %></h6>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= view.form_group(self, f, :name) do %>
    <%= f.text_field :name, class:"form-input mt-2", placeholder:"Company Name", autofocus: true, autocomplete: "name" %>
    <%= view.errors_hint_tag(f, :name) %>
  <% end %>
  <%= view.form_group(self, f, :email) do %>
    <%= f.email_field :email, class:"form-input mt-2", placeholder:"Email", autofocus: true, autocomplete: "email" %>
    <%= view.errors_hint_tag(f, :email) %>
  <% end %>
  <%= view.form_group(self, f, :password) do %>
    <%= f.password_field :password, 
        class:"form-input mt-2", 
        placeholder:"Password #{@minimum_password_length.present? ? '(' + @minimum_password_length.to_s + ' characters minimum)' : ''}", 
  autofocus: true, 
  autocomplete: "new-password" %>
    <%= view.errors_hint_tag(f, :password) %>
  <% end %>
  <%= view.form_group(self, f, :password_confirmation) do %>
    <%= f.password_field :password_confirmation, class:"form-input mt-2", placeholder:"Confirm Password", autocomplete: "new-password" %>
    <%= view.errors_hint_tag(f, :password_confirmation) %>
  <% end %>
  <div class="actions mt-4">
    <%= f.submit "Create Account", class: "btn btn-primary my-2" %>
    or 
  </div>
<% end %>
<%= render "devise/shared/links" %>
