<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Remote Ruby on Rails Jobs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="navbar">
      <section class="navbar-section">
        <a href="/" class="navbar-brand">Ruby Remote Jobs</a>
        <%= link_to 'Employers', login_path, class: 'btn btn-link' %>
        <%= link_to 'Log Out', logout_path, method: :delete, remote: true, class: 'btn btn-link' %>
      </section>
    </header>
    <div class="container mb-8">
      <div class="columns">
        <div class="col-12 text-center mb-5">
          <%= form_tag job_listings_path(search: @search_text), method: :get do %>
            <div class="input-group input-inline">
              <%= text_field_tag :search, @search_text, class: "form-input input-lg", placeholder: "Search" %>
              <%= button_tag class: 'btn input-group-btn btn-lg' do %> <i class="icon icon-search"></i> <% end %>
            </div>
          <% end %>
        </div>
        <div class="col-3 col-md-0"></div>
        <div class="col-6 col-md-12">          
          <%= render partial: "layouts/flash" %>
          <%= yield %>
        </div>
        <div class="col-3 col-md-0"></div>
      </div>
    </div>
  </body>
</html>
