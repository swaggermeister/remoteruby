<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Remote Ruby on Rails Jobs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="navbar">
      <section class="navbar-section">
        <a href="/" class="navbar-brand">Ruby Remote Jobs</a>
        <%= link_to 'Employers', login_path, class: 'btn btn-link' %>
        <%= link_to 'Log Out', logout_path, method: :delete, remote: true, class: 'btn btn-link' %>
      </section>
    </header>
    <div class="container">
      <div class="columns">
        <div class="col-12 text-center">
          <%= form_tag job_listings_path(search: @search_text), method: :get do %>
            <div class="input-group input-inline">
              <%= text_field_tag :search, @search_text, class: "form-input input-lg", placeholder: "Search" %>
              <%= submit_tag 'Search', class: 'btn btn-primary input-group-btn btn-lg' %>
            </div>
          <% end %>
        </div>
        <div class="col-2 col-md-0"></div>
        <div class="col-8 col-md-12">
          session[:employer_id] <%= session[:employer_id].inspect %>
          <%= render partial: "layouts/flash" %>
          <%= yield %>
        </div>
        <div class="col-2 col-md-0"></div>
      </div>
    </div>
  </body>
</html>
