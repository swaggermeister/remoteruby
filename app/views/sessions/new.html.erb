<div class="m-2 p-2">
  <%= form_tag do %>
    <h3>Log In</h3>
    <div class="form-group">
      <%= label_tag :email, nil, class:"form-label" %>
      <%= text_field_tag :email, params[:email], class:"form-input col-5", placeholder:"Email" %>
    </div>
    <div class="form-group">
      <%= label_tag :password, nil, class:"form-label" %>
      <%= password_field_tag :password, params[:password], class:"form-input col-5", placeholder:"Password" %>
    </div>
    <div class="my-4">
      <%= submit_tag "Log in", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<div class="m-2 p-2">
  <h4>New to Remote Ruby on Rails Jobs?</h4>
  <%= link_to 'Create an Account', new_employer_path, class: 'btn btn-default' %>
</div>
