<div class="columns">
  <div class="sort col-12">
    <button class="btn btn-link">Sort Jobs by Salary</button>
  </div>
  <div class="joblistings col-12">
    <% @job_listings.each do |job_listing| %>
      <div class="card s-rounded mb-2">
        <div class="card-header">
          <%= link_to job_listing_path(job_listing) do %>
            <span class="text-bold"><%= job_listing.title %></span> - <%= job_listing.salary %>
          <% end %>
        </div>
        <div class="card-body">
          <span class="employer">
            <img class="avatar" src="<%="/images/logo#{(1..6).to_a.shuffle.first}.jpeg"%>" />
            <%# <div class="location mb-2"></div> %>
            <%= job_listing.employer_name %> - 
            <%= job_listing.location %>
          </span>
        </div>
        <div class="card-footer">
          <%= link_to 'View Full Listing', job_listing_path(job_listing), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
