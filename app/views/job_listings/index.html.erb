<%= render 'search' %>
<div class="columns">
  <div class="sort col-12 text-center">
    <% if presenter.sortcolumn != 'salary' %>
      <%= link_to 'Sort Jobs by Salary', job_listings_path(search: @search_text, sortcolumn: 'salary') %>
    <% else %>
      <%= link_to 'Sort Jobs by Newest', job_listings_path(search: @search_text) %>
    <% end %>
  </div>
  <div class="joblistings col-12">
    <% if presenter.job_listings? %>
      <%= render presenter.job_listings, locals: {presenter: presenter} %>
      <%== pagy_bootstrap_nav(presenter.paginator) %>
    <% else %>
      <%= render 'no_search_results' %>
    <% end %>
  </div>
</div>
