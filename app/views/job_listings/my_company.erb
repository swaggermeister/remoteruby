<div class="my-account">
  <%= link_to 'View Profile', edit_employer_path(current_employer) %>
</div>
<div class="job-listings-header my-2">
  <h3>Your Job Listings</h3>
</div>
<div class="my-job-listings">
  <%= link_to 'Add a new listing', new_job_listing_path %>
  <% if presenter.job_listings? %>
    <% presenter.job_listings.each do |job_listing| %>
      <%= render partial: "my_job_listing", locals: { job_listing: job_listing } %>
    <% end %>
  <% else %>
    <%= render partial: "no_job_listings" %>
  <% end %>
</div>
