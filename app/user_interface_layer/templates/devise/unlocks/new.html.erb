<h3>Resend unlock instructions</h3>
<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= view.form_group(self, f, :email) do %>
    <%= f.label :email %>
    <%= f.email_field :email, class:"form-input mt-2", placeholder:"Email",autofocus: true, autocomplete: "email" %>
    <%= view.errors_hint_tag(f, :email) %>
  <% end %>
  <div class="actions mt-4 text-center">
    <%= f.submit "Resend unlock instructions", class: "btn btn-primary btn-block my-2" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
